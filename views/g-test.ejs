<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header'); -%>
  <body>
    <!-- Navigation-->
    <%- include('layouts/navbar'); -%>
    <!-- Page Header-->
    <header class="masthead">
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="site-heading">
              <h1>G - Booking</h1>
              <span class="subheading">Booking Kiosk</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <!-- Post preview-->
          <div class="post-preview">
            <a href="#">
              <h2 class="post-title">G DriveTest Booking.</h2>
              <h3 class="post-subtitle">Please keep your G2 licence ready.</h3>
            </a>
            <p class="post-meta">
              Posted by
              <a href="#!">DriveTest centre, Kitchener</a>
              on January 27, 2024
            </p>
          </div>
          <div class="container mt-4">
            <form class="col-md-6" action="/users/search">
              <div class="form-group mb-4">
                <label for="licenceNumber">License Number</label>
                <input
                  type="text"
                  class="form-control"
                  id="licenceNumber"
                  name="licenceNumber"
                  placeholder="Enter your licence number"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary mb-4">
                Fetch details
              </button>
            </form>
          </div>
        </div>
      </div>
      <% if (user !== undefined) { if(user) { %> <%- include('layouts/userForm',
      { action: '/users/update', title: 'CreateUser', buttonLabel: 'Update',
      disable: true, user}); %> <% } else { %>
      <div class="d-flex justify-content-center align-items-center">
        <p class="text-center fw-bold text-danger">
          User not found. Please check the licence number
        </p>
      </div>
      <% }} %>
    </div>
    <%- include('layouts/footer'); -%> <%- include('layouts/script'); -%>
  </body>
</html>
